<div class="attributes desc">
	<div class="sp-tracker flexrow flex-group-center grid grid-4col">
		<div class="desc-header resource-content grid grid-4col">
			<label class="resource-label-l grid-span-3">SP Available</label>
			<span class="resource-label-m">{{ spTracker.spAvailable }}</span>
		</div>

		{{!-- Start Available Skills --}}
		{{#if spTracker.availableSkills.species}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Available skills from species</label>
			<span>{{ spTracker.availableSkills.species }}</span>
		</div>
		{{/if}} {{#if spTracker.availableSkills.level}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Available skills from level</label>
			<span>{{ spTracker.availableSkills.level }}</span>
		</div>
		{{/if}} {{#if spTracker.availableSkills.vulnerabilities}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Available skills from vulnerabilities</label>
			<span>{{ spTracker.availableSkills.vulnerabilities }}</span>
		</div>
		{{/if}} {{#if spTracker.availableSkills.rank}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Available skills from rank</label>
			<span>{{ spTracker.availableSkills.rank }}</span>
		</div>
		{{/if}}

		{{!-- End Available Skills --}}
		<div class="desc-header resource-content grid grid-4col">
			<label class="resource-label-l grid-span-3">SP Used</label>
			<span class="resource-label-m">{{ spTracker.spUsed }}</span>
		</div>

		{{!-- Start Used Skills --}}
		{{#if spTracker.usedSkills.specialAttacks}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from special attacks</label>
			<span>{{ spTracker.usedSkills.specialAttacks }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.spells}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from spells</label>
			<span>{{ spTracker.usedSkills.spells }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.extraDefense}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from extra defense</label>
			<span>{{ spTracker.usedSkills.extraDefense }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.extraHP}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from extra HP</label>
			<span>{{ spTracker.usedSkills.extraHP }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.extraMP}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from extra MP</label>
			<span>{{ spTracker.usedSkills.extraMP }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.initiativeBonus}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from extra initiative bonus</label>
			<span>{{ spTracker.usedSkills.initiativeBonus }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.accuracyCheck}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from extra accuracy check</label>
			<span>{{ spTracker.usedSkills.accuracyCheck }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.magicCheck}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from extra magic check</label>
			<span>{{ spTracker.usedSkills.magicCheck }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.resistances}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from resistances</label>
			<span>{{ spTracker.usedSkills.resistances }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.immunities}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from immunities</label>
			<span>{{ spTracker.usedSkills.immunities }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.absorption}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from absorption</label>
			<span>{{ spTracker.usedSkills.absorption }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.specialRules}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from special rules</label>
			<span>{{ spTracker.usedSkills.specialRules }}</span>
		</div>
		{{/if}} {{#if spTracker.usedSkills.equipment}}
		<div class="resource-content grid grid-4col align-center">
			<label class="resource-label-sm grid-span-3">Used skills from equipment (?)</label>
			<span>{{ spTracker.usedSkills.equipment }}</span>
		</div>
		{{/if}}
	</div>
</div>